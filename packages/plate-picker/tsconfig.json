{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
  	  "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
      "baseUrl": ".",
      "declaration": true,
      "declarationDir": "./dist/types",
      "jsx": "preserve",
      "lib": [
          "esnext",
          "dom",
          "dom.iterable",
          "scripthost"
      ],
      "module": "esnext",
      "moduleResolution": "node",
      "paths": {
          "*": ["types/*"],
          "@/*": [
              "src/*"
          ]
      },
      "target": "es5",
      "types": [
          "node"
      ],
      "rootDir": "src",
      "outDir": "dist"

  }
}
